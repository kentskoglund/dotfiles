#DIR=$HOME
#ALERT_LOW=10
interval=30

[CPU]
label= 
#command=ps -eo pcpu,comm | sort -k 1 -nr | head -1
command=ps -Ao pcpu,comm --sort=-pcpu --no-headers | head -n 1
interval=2

[ip-internal]
label= 
command=ip a | sed -En 's/127.0.0.1//;s/.*inet (addr:)?(([0-9]*\.){3}[0-9]*).*/\2/p' | xargs | sed 's/\ /\ \-\ /'
#color=#FFBF37
interval=3600

[ip-public]
label=  
command=wget -qO - icanhazip.com
#color=#6999E8
interval=3600

