#!/bin/sh

EXTERNAL_OUTPUT="DP-2"
INTERNAL_OUTPUT="DP-0"

# if we don't have a file, start at zero
if [ ! -f "/tmp/monitor_mode.dat" ] ; then
  monitor_mode="BOTH"

# otherwise read the value from the file
else
  monitor_mode=`cat /tmp/monitor_mode.dat`
fi

if [ $monitor_mode = "BOTH" ]; then
        monitor_mode="INTERNAL"
        xrandr --output $INTERNAL_OUTPUT --mode 3440x1440 --pos 0x1080 --rotate normal --primary  --output $EXTERNAL_OUTPUT --off
		sleep 2
		pkill nitrogen
		pkill picom
		nitrogen --restore
		sleep 1
	   	picom -b  
elif [ $monitor_mode = "INTERNAL" ]; then
        monitor_mode="BOTH"
		xrandr --output $INTERNAL_OUTPUT --mode 3440x1440 --pos 0x1080 --rotate normal --primary --output $EXTERNAL_OUTPUT --mode 1920x1080 --pos 597x0 --rotate normal
		sleep 2
		pkill nitrogen
		pkill picom
		nitrogen --restore
		sleep 1
	   	picom -b  
#elif [ $monitor_mode = "INTERNAL" ]; then
#        monitor_mode="CLONES"
#        xrandr --output $INTERNAL_OUTPUT --auto --output $EXTERNAL_OUTPUT --auto --same-as $INTERNAL_OUTPUT
else
        monitor_mode="BOTH"
		xrandr --output $INTERNAL_OUTPUT --mode 3440x1440 --pos 0x1080 --rotate normal --primary --output $EXTERNAL_OUTPUT --mode 1920x1080 --pos 597x0 --rotate normal
fi
echo "${monitor_mode}" > /tmp/monitor_mode.dat
